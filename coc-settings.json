{
  "python.linting.pylintEnabled": false,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "git.enableGutters": true,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "tex",
    "text",
    "typescript",
    "typescriptreact",
    "vim",
    "yaml",
    "yml"
  ],
  "cSpell.maxNumberOfProblems": 10000,
  "cSpell.userWords": [
  ],
  "languageserver": {
      "hdlChecker": {
          "command": "hdl_checker",
          "args": [
              "--lsp"
          ],
          "filetypes": [
              "vhdl",
              "verilog",
              "systemverilog"
          ]
      }
  },
  "snippets.ultinips.directories": [
      "${HOME}/.config/nvim/ultispnips"
  ]
}
